<div class="page-header">
  <%= link_to new_asset_path, class: 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-plus"></span>
  New Asset
  <% end %>
  <h1>Listing assets</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Owner</th>
        <th>Address</th>
        <th>Rooms</th>
        <th>Sqmt</th>
        <th>Units</th>
        <th>Shops</th>
        <th>Parking</th>
        <th>Floors</th>
        <th>Air cond</th>
        <th>Price</th>
        <th>Type</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%- @assets.each do |asset| %>
      <td><%= asset.owner %></td>
      <td><%= asset.address %></td>
      <td><%= asset.rooms %></td>
      <td><%= asset.sqmt %></td>
      <td><%= asset.units %></td>
      <td><%= asset.shops %></td>
      <td><%= asset.parking %></td>
      <td><%= asset.floors %></td>
      <td><%= asset.air_cond %></td>
      <td><%= asset.price %></td>
      <td><%= asset.type %></td>
      <td><%= link_to 'Show', asset %></td>
      <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
      <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>